<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollViewContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/composeBottomNav"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tab -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/tabPsikolog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Psikolog"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#2757A5"
                    android:layout_marginEnd="24dp" />

                <TextView
                    android:id="@+id/tabObat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Obat"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#9E9E9E" />
            </LinearLayout>

            <!-- ViewPager2 untuk slider Psikolog atau Obat -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPagerPsikolog"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp" />

            <!-- RecyclerView untuk rekomendasi -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvRecommended"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Navbar Compose di bawah -->
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/composeBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
